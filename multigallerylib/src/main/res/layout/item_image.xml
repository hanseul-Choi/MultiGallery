<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="image"
            type="com.hanlien.multigallery.model.Image" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_siv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            bind:imagePath="@{image.path}"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_background_r20"
            android:scaleType="centerCrop"
            tools:src="@drawable/sample_image" />

        <View
            android:id="@+id/image_select_frame_v"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/image_select_frame"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/image_siv"
            app:layout_constraintEnd_toEndOf="@id/image_siv"
            app:layout_constraintBottom_toBottomOf="@id/image_siv"
            app:layout_constraintTop_toTopOf="@id/image_siv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>