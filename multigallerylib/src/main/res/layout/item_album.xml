<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_image_siv"
        bind:imagePath="@{album.path}"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_background_r20"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sample_image" />

    <View
        android:id="@+id/album_select_frame_v"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/image_select_frame"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/album_image_siv"
        app:layout_constraintEnd_toEndOf="@id/album_image_siv"
        app:layout_constraintStart_toStartOf="@id/album_image_siv"
        app:layout_constraintTop_toTopOf="@id/album_image_siv" />

    <TextView
        android:id="@+id/album_select_title_tv"
        style="@style/DalseoBold.H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@{album.title}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/album_image_siv"
        app:layout_constraintStart_toStartOf="@id/album_image_siv"
        app:layout_constraintTop_toBottomOf="@id/album_image_siv"
        tools:text="test title" />
</androidx.constraintlayout.widget.ConstraintLayout>